extend layout

block content
  main.index
    link(rel='stylesheet', href='/css/slider.css')
    //- data-*：自訂一個非標準的 attributes，在 HTML 以 data- 開頭的可以在 JS 裡面用 dataset 拿到
    .slideshow-container.wfull.p-re
      each slider in data.slider
        a.Slider.wfull.p-ab.transition-512(style="top:0;",href=slider.url, data-text=slider.text, data-delay="0", data-anime="text-anime")
          img.wfull(src=slider.img)
          //- 新增時去 data.json 新增即可

      .navs-container.p-ab
         each val, index in data.slider
          .navs.cursor-pointer.z-300.transition-512(data-id=index+1)
            .nav-btn

      #sliderBtn-back.sliderBtn.cursor-pointer.z-300.p-ab(data-action='back')
        .arr-btn
      #sliderBtn-next.sliderBtn.cursor-pointer.p-ab.z-300(data-action='next')
        .arr-btn

    script(type='text/javascript', src='/js/silder.js')
